{
  "hooks": {
    "after:git:release": "RELEASE_IT_NEXT_VERSION=${version} node ./release-it-itchio.cjs"
    
  },
  "plugins": {
    "@release-it/keep-a-changelog": {
      "infile": "CHANGELOG.md",
      "addUnreleased": true
    }
  },
  "git": {
    "tagName": "v${version}",
    "requireCleanWorkingDir": true
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN"
  }
}

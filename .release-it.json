{
  "hooks": {
    "afterRelease": "node release-it-itchio-upload.js"
  },
  "plugins": {
    "@release-it/keep-a-changelog": {
      "infile": "CHANGELOG.md"
    }
  },
  "git": {
    "tagName": "v${version}",
    "requireCleanWorkingDir": true
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN"
  }
}
